<body>
 <h2>Verificando sua Aprovação</h2>
 <label for="nota1">Digita aqui sua nota (de 0 até 10)</label>
 <input type = "number" id="nota1" min="0" max="10">
 <button onclick="verificarNota()">Descobrir</button>

<p id="resultado"></p>

<script>
        function verificarNota() {
        const nota1 = parseFloat(document.getElementById("nota1").value);
        const resultado = document.getElementById("resultado");

        if (nota1 >= 8) {
            resultado.textContent = "Aprovado";
        } else if (nota1 >= 6) {
            resultado.textContent = "Recuperação";
        } else {
            resultado.textContent = "Reprovado";
    }
}

</script>
</body>
</html>
